{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"allowJs": false,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"],
			"@assets/*": ["src/assets/*"],
			"@components/*": ["src/components/*"],
			"@hooks/*": ["src/hooks/*"],
			"@pages/*": ["src/pages/*"],
			"@routes/*": ["src/routes/*"],
			"@theme/*": ["src/theme/*"],
			"@layouts/*": ["src/layouts/*"],
			"@context/*": ["src/context/*"],
			"@data/*": ["src/data/*"],
			"@utils/*": ["src/utils/*"],
			"@services/*": ["src/services/*"],
			"@types/*": ["src/types/*"]
		}
	},
	"include": ["src"]
}
